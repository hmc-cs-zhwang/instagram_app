<h2>New Post</h2>
<hr> 
<%= form_for @post, html: { multipart: true } do |f| %>
	<%= f.label :image %>
	<div>
	<%= f.file_field :image %>
	</div>
<br>
	<%= f.label :description %>
	<%= f.text_area :description %>
	<br>
	<%= f.submit %>
<% end %>